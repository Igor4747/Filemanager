<div class="sidenav">
    <a id="filters">Filtry</a>
    {{!-- <img src="/upload_64a752232f16a215748a80fa583f48d2.jpg"> --}}
    <div id="panel">
        {{#each effects}}
        <p id="{{name}}">{{name}}</p>
        <img class="photo" src="{{filepath}}" style="filter:{{name}}(100%)">
        {{/each}}
        <p id="none">none</p>
        <img class="photo" src="{{filepath}}">
    </div>
</div>
<div class="filemanager" id="main" style="left:270px;">
    <p class="title3"><b>{{file}}</b></p>
    <img id="mainPhoto" class="photo2" src="{{filepath}}">
</div>


<script>
    let x = 0
    document.getElementById("filters").addEventListener("click", function () {
        if (x == 0) { //walczony
            document.getElementById("panel").style.width = "150px";
            document.getElementById("panel").style.padding = "5px";
            document.getElementById("main").style.left = "420px"
            x = 1
        }
        else if (x == 1) {   //wylaczony
            document.getElementById("panel").style.padding = "0px";
            document.getElementById("panel").style.width = "0px";
            document.getElementById("main").style.left = "270px"
            x = 0
        }
    })
    document.getElementById("grayscale").addEventListener("click", function(){
        document.getElementById("mainPhoto").style.filter = "grayscale(100%)";
    })
    document.getElementById("invert").addEventListener("click", function(){
        document.getElementById("mainPhoto").style.filter = "invert(100%)";
    })
    document.getElementById("sepia").addEventListener("click", function(){
        document.getElementById("mainPhoto").style.filter = "sepia(100%)";
    })
    document.getElementById("none").addEventListener("click", function(){
        document.getElementById("mainPhoto").style.filter = "none";
    })
</script>